@page
@model FinalProject.Pages.Manufacturers.IndexModel

@{
    ViewData["Title"] = "Index";
}
<body style="font-family:Cambria; color:black;">
    <h1>List of Manufacturers</h1>

    <p>
        <a asp-page="Create">Create New Manufacturer</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Manufacturer)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
  </body>
