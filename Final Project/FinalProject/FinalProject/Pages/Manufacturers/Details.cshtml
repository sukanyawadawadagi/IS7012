@page
@model FinalProject.Pages.Manufacturers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Manufacturer Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
    </dl>
</div>

@if (Model.Manufacturer.Findcarparts.Any())
{
    <div>
        <h4> Parts Available: </h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Manufacturer.Findcarparts[0].PartName)</th>
                    <th>@Html.DisplayNameFor(model => model.Manufacturer.Findcarparts[0].PartValue)</th>
                    <th>@Html.DisplayNameFor(model => model.Manufacturer.Findcarparts[0].IsItObsolete)</th>
             
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Manufacturer.Findcarparts)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelitem => item.PartName)</td>
                        <td>@Html.DisplayFor(modelitem => item.PartValue)</td>
                        <td>@Html.DisplayFor(modelitem => item.IsItObsolete)</td>
                        <td>
                            <a asp-page="/Findcarparts/Details" asp-route-id="@item.Id">Find Car Part Details</a>
                        </td>
                        @*<td>
                            <a asp-page="/Routes/Details" asp-route-id="@item.Cab.Routes[item.BookingId].RouteId">Route Details</a>
                            </td>*@
                    </tr>
                }
                <tr>
                    <th></th>
                    <th>Total Car Parts</th>
                    <th>@Model.Manufacturer.Findcarparts.Count</th>
                    <th></th>
                </tr>
            </tbody>
        </table>
    </div>}
else
{
    <div class="alert-warning">No current Car Parts is available.</div>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Manufacturer.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
