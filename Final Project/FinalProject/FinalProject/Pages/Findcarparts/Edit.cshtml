@page
@model FinalProject.Pages.Findcarparts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit car part details</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Findcarpart.Id" />
            <div class="form-group">
                <label asp-for="Findcarpart.PartName" class="control-label"></label>
                <input asp-for="Findcarpart.PartName" class="form-control" />
                <span asp-validation-for="Findcarpart.PartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Findcarpart.PartValue" class="control-label"></label>
                <input asp-for="Findcarpart.PartValue" class="form-control" />
                <span asp-validation-for="Findcarpart.PartValue" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Findcarpart.IsItObsolete" /> @Html.DisplayNameFor(model => model.Findcarpart.IsItObsolete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Findcarpart.PartModelNo" class="control-label"></label>
                <input asp-for="Findcarpart.PartModelNo" class="form-control" />
                <span asp-validation-for="Findcarpart.PartModelNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Findcarpart.ManufacturerId" class="control-label"></label>
                <select asp-for="Findcarpart.ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                <span asp-validation-for="Findcarpart.ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
