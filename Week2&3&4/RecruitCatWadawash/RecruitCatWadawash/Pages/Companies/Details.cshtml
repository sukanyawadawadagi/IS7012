@model RecruitCatWadawash.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Model.Company.Name</h1>

<div>
   @* <h4>Company</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OptionalStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.OptionalStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyShareValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyShareValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.InsuranceCoverage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.InsuranceCoverage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Jobtitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Jobtitle.Title)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Company.Candidates == null || Model.Company.Candidates.Count == 0)
    {
<div class="alert alert-danger">
    <h4>No Candidates</h4>
    <p>No Candidate avaliable</p>
</div> }
            else
            {

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Candidate First Name</th>
            <th>Job Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ca in Model.Company.Candidates)
        {
<tr>
    <td>@ca.FirstName</td>

    <td>@ca.JobTitle.Title</td>
   

    <td><a href="/Candidates/Details?id=@ca.Id">Details</a>
</tr>}
    </tbody>
</table>}
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
